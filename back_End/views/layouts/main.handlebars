<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Click Counter</title>
    <script>

        let click = {{counter}};
        document.getElementById('counter').value = click;
        function count(){
            document.getElementById('counter').value = ++click;
            click = click
        }
        function reset(){
            document.getElementById('counter').value = 0;
            click = 0
        } 
    </script>
